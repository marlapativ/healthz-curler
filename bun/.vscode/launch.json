  "version": "0.2.0",
  "configurations": [
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug Bun Server",
      "program": "src/server.ts",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "watchMode": false
    },
    {
      "type": "bun",
      "internalConsoleOptions": "neverOpen",
      "request": "launch",
      "name": "Debug Bun Server(Inspect)",
      "program": "src/server.ts",
      "cwd": "${workspaceFolder}",
      "args": [
        "--inspect"
      ],
      "stopOnEntry": false,
      "watchMode": false
    }
  ]
}
